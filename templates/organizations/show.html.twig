{% extends 'base.html.twig' %}

{% block title %}Organizations{% endblock %}

{% block body %}
    <h1>Organizations</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ organization.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ organization.name }}</td>
            </tr>
            <tr>
                <th>Street</th>
                <td>{{ organization.street }}</td>
            </tr>
            <tr>
                <th>Zipcode</th>
                <td>{{ organization.zipcode }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ organization.city }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ organization.country }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ organization.createdAt ? organization.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_organizations_index') }}">back to list</a>

    <a href="{{ path('app_organizations_edit', {'id': organization.id}) }}">edit</a>

    {{ include('organizations/_delete_form.html.twig') }}
{% endblock %}
